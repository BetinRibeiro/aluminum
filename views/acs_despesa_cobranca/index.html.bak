{{extend 'layout.html'}}

{{total=0.0}}
{{tipodesp=""}}

<div class="py-5" >

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h5 class="">Lista de Despesas da Cobrança de {{=sub_venda.primeira_cidade}}

              </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <a class="btn btn-link" href="{{=URL('acs_cobranca','relatorio_cobranca', args=sub_venda.id)}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-arrow-left"></i> Voltar</a>
          <a class="btn btn-link" href="{{=URL('criar_class_desp', args=[sub_venda.id])}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-arrow-left"></i> Adicionar Nova Despesa</a>
        </div>
            
      </div>
      <div class="row">
        <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-borderless table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>DESCRIÇÃO</th>
                                <th>TOTAL</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{a=1}}
                            {{for row in rows:}}
                            <tr>
                                <td>{{=a}}</td>
                                <td>{{=row.descricao}}</td>
                                <td>R$ {{="{:,}".format(round(row.total_despesa,1)).replace(",",".")}}0</td>
                                <td><a href="{{=URL('acesso_despesa', args=[row.id])}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-arrow-left"></i></a></td>

                                {{a+=1}}
                            </tr>
                            {{total+=row.total_despesa}}
                            {{pass}}
                            <tr>
                                <th>#</th>
                                <th>#</th>
                                <th>R$ {{="{:,}".format(round(total,1)).replace(",",".")}}0</th>
                                <th></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
                </div>
            </div>

{{sub_venda.total_despesa=total}}
{{sub_venda.update_record()}}
