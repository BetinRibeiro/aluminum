{{extend 'layout.html'}}

{{total=0.0}}
{{tipodesp=""}}
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-outline-light" href="{{=URL('cobranca','acesso_particao_cobranca', args=[sub_venda.id])}}"> <i class="fa text-danger fa-arrow-left  fa-2x"></i></a>
        <a class="btn btn-outline-light" href="{{=URL('criar_class_desp', args=[sub_venda.id])}}"><i class="fa text-success fa-plus fa-2x"></i></a>
        
    </div>
</div>

                {{if len(rows)>0:}}
                <h5>Lista de despesas da cobrança</h5>
                {{else:}}
                <h5>Você precisa cadastrar um tipo de despesa</h5>
                {{pass}}

                <div class="table-responsive">
                    <table class="table table-striped table-borderless table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>DESCRIÇÃO</th>
                                <th>TOTAL</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{a=1}}
                            {{for row in rows:}}
                            <tr>
                                <td>{{=a}}</td>
                                <td><a href="{{=URL('acesso_despesa', args=[row.id])}}">{{=row.descricao}}</a></td>
                                <td>R$ {{="{:,}".format(round(row.total_despesa,1)).replace(",",".")}}0</td>
                                <td><a href="{{=URL('alterar_class_desp', args=[row.id])}}"><i class="fa text-warning fa-exchange" ></i></a></td>

                                {{a+=1}}
                            </tr>
                            {{total+=row.total_despesa}}
                            {{pass}}
                            <tr>
                                <th>#</th>
                                <th>#</th>
                                <th>R$ {{="{:,}".format(round(total,1)).replace(",",".")}}0</th>
                                <th></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

{{sub_venda.total_despesa=total}}
{{sub_venda.update_record()}}
