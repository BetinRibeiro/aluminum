{{extend 'layout.html'}}
<h5>{{=empresa.nome}}</h5>
{{if rows>0:}}
<div class="table-responsive" >
        <table class="table table-bordered table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">DESCRIÇÃO</th>
                <th scope="col">VENDA</th>
               <th scope="col">ALTERAÇÃO</th>
            </tr>
          </thead>
          <tbody>
            {{for row in rows:}}
                  <tr>
                    <td><a  href="{{=URL('projeto','acesso_projeto', args=row.id)}}">{{=row.descricao}}</a></td>
                      <td>R$ {{="{:,}".format(round(row.total_venda_prazo)).replace(",",".")}}0</td>
                    <td><a href="{{=URL('alterar_projeto', args=row.id)}}"><i class="fa mr-2 fa-exchange text-warning" ></i></a></td>
                  </tr>
                  {{pass}}
          </tbody>
        </table>
      </div>
{{pass}}
<hr>
{{if len(rowscob)>0:}}
<div class="table-responsive" >
        <table class="table table-bordered table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">DATA</th>
               <th scope="col">CIDADE</th>
               <th scope="col">ALTERAÇÃO</th>
            </tr>
          </thead>
          <tbody>
            {{for row1 in rowscob:}}
                  <tr>
                    <td><a  href="{{=URL('cobranca','acesso_cobranca', args=row1.id)}}">{{=("{}/{}/{}".format(row1.data_inicio_cobranca.day,row1.data_inicio_cobranca.month,row1.data_inicio_cobranca.year))}}</a></td>
                      <td>{{=row1.primeira_cidade}}</td>
                    <td><a href="{{=URL('alterar_cobranca', args=row1.id)}}"><i class="fa mr-2 fa-exchange text-warning" ></i></a></td>
                  </tr>
            {{pass}}
          </tbody>
        </table>
      </div>
{{pass}}
