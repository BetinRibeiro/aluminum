{{extend 'layout.html'}}
<div class="row">
    <div class="col-md-6">
        <a  class="btn btn-outline-light" href="{{=URL('projeto','acesso_projeto', args=projeto.id)}}"> <i class="fa text-danger fa-arrow-left  fa-2x"></i></a>
        
        {{if not projeto.venda_finalizada:}}
            <a  class="btn btn-outline-light" href="{{=URL('criar_particao', args=projeto.id)}}"><i class="fa text-success fa-plus fa-2x"></i></a>
        {{pass}}
    </div>
</div>
            {{if len(rows)>0:}}
            Partições da venda {{=projeto.descricao}}
            {{else:}}
            Você precisa cadastrar partições da venda
            {{pass}}
            <div class="table-responsive">
            <table class="table table-striped table-borderless table-sm">
              <thead>
                <tr>
                  <th scope="col">Cidade</th>
                  <th scope="col">Q. Fichas</th>
                  <th scope="col">Total Venda</th>
                  <th scope="col" >Data Cobrança</th>
                  <th scope="col" >Alterar</th>
                </tr>
              </thead>
              <tbody>
                  {{for row in rows:}}
                <tr>
                    <th scope="row"><a href="{{=URL('ver_particao', args=row.id)}}">#{{=row.primeira_cidade}}</a></th>
                  <td>{{=row.quant_fichas}}</td>
                  <td>R$ {{="{:,}".format(round(row.venda_praso,2)).replace(",",".")}}0</td>
                  <td>{{=("{}/{}/{}".format(row.data_inicio_cobranca.day,row.data_inicio_cobranca.month,row.data_inicio_cobranca.year))}}</td>
                   
                    {{if not projeto.venda_finalizada:}}
                  <td><a href="{{=URL('alterar_particao', args=row.id)}}"><i class="fa text-warning fa-exchange" ></i></a></td>
                    
                    {{else:}}
                    <td>Bloqueado</td>
                    {{pass}}
                </tr>
                  {{pass}}
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>
