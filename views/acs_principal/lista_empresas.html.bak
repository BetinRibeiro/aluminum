{{extend 'layout.html'}}
<div class="py-5" >
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h3 class="">Ecesso Administrativo Geral</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-dark">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nome Empresa</th>
                  <th scope="col">Opção</th>
                </tr>
              </thead>
              <tbody>
                  {{a=1}}
                  {{for row in rows:}}
                <tr>
                  <th scope="row">{{=a}}</th>
                  <td>{{=row.nome}}</td>
                  <td><a class="btn btn-link" style="color:#55acee"href="{{=URL('index', args=row.id*12)}}"><i class="fa fa-twitter fa-fw fa-1x py-1"></i></a></td>
                </tr>
                  {{a+=1}}
                  {{pass}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
