{{extend 'layout.html'}}

<div class="py-5" style="">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h5 class="">Pagamentos do Sistema</h5>
      </div>
          <div class="row">
        <div class="col-md-12">
          <a class="btn btn-link" href="{{=URL('acs_principal','index', args=empresa.id*12)}}" style="color:#3b5998">
            <i class="fa fa-fw fa-1x py-1 fa-arrow-left"></i> Voltar </a>
            {{if usuario.id==1:}}
                <a class="btn btn-link" href="{{=URL('inserir_pagamento', args=empresa.id)}}" style="color:#3b5900"><i class="fa fa-fw fa-1x py-1 fa-plus"></i> Inserir Pagamento</a>
                {{pass}}
        </div>
      </div>
      </div>
      
<div class="row">
            <div class="col-md-12">
              <div class="table-responsive">
                <table class="table table-striped table-borderless">
                  <thead>
                    <tr>
                      <th scope="col">Data</th>
                      <th scope="col">Descrição</th>
                      <th scope="col">Valor</th>
                      <th scope="col">Status</th>
                      <th scope="col">Opções</th>
                    </tr>
                  </thead>
                  <tbody>
                      {{for row in rows:}}
                    <tr>
                      <th scope="row">{{=("{}/{}/{}".format(row.data_vencimento.day,row.data_vencimento.month,row.data_vencimento.year))}}</th>
                      <td>{{=row.descricao}}</td>
                      <td>{{=row.valor}}</td>
                        {{if row.quitado:}}
                      <td>Quitado</td>
                        {{else:}}
                        {{response.flash = row.observacao}}
                    <script>
                        alert("Não identificamos o pagamento do sistema.");
                    </script>
                      <td>Pendente</td>
                        {{pass}}
                {{if usuario.id==1:}}
                      <td><a class="btn btn-link" href="{{=URL('alterar_pagamento',  args=row.id)}}" style="color:#3b5998" ><i class="fa fa-fw fa-1x py-1 fa-usd"></i></a></td>
                        {{else:}}
                      <td><a class="btn btn-link" href="#" style="color:#3b5998" ><i class="fa fa-fw fa-1x py-1 fa-hand-o-right"></i></a></td>
                        {{pass}}
                    </tr>
                      {{pass}}
                  </tbody>
                </table>
              </div>
              </div>
              </div>
              </div>
