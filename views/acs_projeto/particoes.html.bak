{{extend 'layout.html'}}
<div class="py-5" >
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h5 class="">Lista de Carradas Enviadas ( {{=projeto.descricao}} )</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a class="btn btn-link" href="{{=URL('acs_projeto','index', args=projeto.id)}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-arrow-left"></i> Voltar</a>
          <a class="btn btn-link" href="{{=URL('adicionar_rota_cobranca', args=projeto.id)}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-plus"></i> Adicionar Nova Rota de Cobrança</a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-borderless">
              <thead>
                <tr>
                  <th scope="col">Data Cobrança</th>
                  <th scope="col">Primeira Cidade</th>
                  <th scope="col" class="text-center">Q.Fichas</th>
                  <th scope="col" class="text-center">Total</th>
                  <th scope="col" class="text-center">Opção</th>
                </tr>
              </thead>
              <tbody>
                  {{for row in rows:}}
                <tr>
                  <th scope="row">{{=("{}/{}/{}".format(row.data_inicio_cobranca.day,row.data_inicio_cobranca.month,row.data_inicio_cobranca.year))}}</th>
                  <td>{{=row.primeira_cidade}}</td>
                  <td class="text-center">{{=row.quant_fichas}}</td>
                    <td class="text-center">R$ {{="{:,}".format(round(row.venda_praso,1)).replace(",",".")}}0</td>
                  <th class="text-center"><a class="btn btn-link" href="{{=URL('acesso_vendas_particao', args=row.id)}}" style="color:#3b5998"><i class="fa fa-fw fa-1x py-1 fa-pencil-square-o"></i> </a></th>
                </tr>
                  {{pass}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
