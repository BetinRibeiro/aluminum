{{extend 'layout.html'}}
<h5>{{=empresa.nome}}</h5>
{{if (len(rows)>0) or(len(rowscob)>0):}}
{{if liberar==9:}}
        <a class="btn btn-outline-light"  href="{{=URL('criar_projeto', args=empresa.id)}}">
            <i class="fa text-primary fa-plus-square fa-2x" ></i>
        </a>
{{pass}}

{{if len(rows)>0:}}
<div class="table-responsive" >
        <table class="table table-bordered table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">DESCRIÇÃO</th>
                <th scope="col">VENDA</th>
            </tr>
          </thead>
          <tbody>
            {{for row in rows:}}
                  <tr>
                    <td><a  href="{{=URL('projeto','acesso_projeto', args=row.id)}}">{{=row.descricao}}</a></td>
                      <td>R$ {{="{:,}".format(round(row.total_venda_prazo,1)).replace(",",".")}}0</td>
                      {{if liberar==9:}}
                      <td><a href="{{=URL('alterar_projeto', args=row.id)}}"><i class="fa mr-2 fa-exchange text-warning" ></i></a></td>
                      {{pass}}
                      
                  </tr>
                  {{pass}}
          </tbody>
        </table>
      </div>
{{pass}}
<hr>
{{if len(rowscob)>0:}}
<div class="table-responsive" >
        <table class="table table-bordered table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">DATA</th>
               <th scope="col">CIDADE</th>
               <th scope="col">VALOR</th>
            </tr>
          </thead>
          <tbody>
            {{for row1 in rowscob:}}
            {{if not row.cobranca_finalizada:}}
                  <tr>
                    <td><a  href="{{=URL('cobranca','acesso_particao_cobranca', args=row1.id)}}">{{=("{}/{}/{}".format(row1.data_inicio_cobranca.day,row1.data_inicio_cobranca.month,row1.data_inicio_cobranca.year))}}</a></td>
                      <td>{{=row1.primeira_cidade}}</td>
                      <td>R$ {{="{:,}".format(round(row1.total_venda_praso,1)).replace(",",".")}}0</td>
                  </tr>
{{pass}}
            {{pass}}
          </tbody>
        </table>
      </div>
{{pass}}

{{else:}}
<h2>
     <marquee direction="left">
    <a class="navbar-brand text-danger"> <h6>Você não possui nem um projeto de venda nem cobranças vinculado ao seu login!</h6></a>
    </marquee>
</h2>
{{pass}}
